<div class="container">
  <h1>Create a new post</h1>

  <form action="/create" method="post">
      Title:<br>
      <input type="text" placeholder="Insert witty title here" name="title" value=<%=@title%>> <br>

      Author:<br>
      <input type="text" placeholder="anonymous?" name="author" value=<%=@author%> ><br>

      Post:<br>
      <textarea rows="15" cols="60" name="body"> <%=@body%> </textarea><br>

      Add tags:
      <input type="text" placeholder="#DevbootCamp" name="tags" value=<%= @tags.join(" ") %> ><br>
      

      <input type="hidden" name="post_id" value=<%= @id %> >
      <input class="button" type="submit" value="Save">
  </form>

  <a href="/"><input class="cancel_button" type="submit" value="Cancel"></a>

</div>
